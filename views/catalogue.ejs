<!DOCTYPE html>

<head>
    <script src="../jquery/jquery.js"></script>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/gallery.css">
    <title>Boutique en ligne de vente de fleurs IP7Floral</title>
    <script> 
        var articles, username;
        <% if(typeof articles !== 'undefined') {%> 
            articles = <%- JSON.stringify(articles) %>;
        <% } else { %>
            articles = [];
        <% } %>

        <% if(typeof username !== 'undefined') {%> 
            username = <%- JSON.stringify(username) %>;
        <% } else { %>
            username = "";
        <% } %>
    </script>
    <script src="../script/catalogue.js"></script>
</head>

<body>
    <header id="navContainer">
        <!--
            remplit par le script qui suit
        -->
    </header>

    <script>
        $(function()
        {
            $("#navContainer").load("../navbar.html");
        });
    </script>

    <div id="priceRange">
        <h3>Prix</h3>
        <label>Minimum</label>
        <input type="text" class="priceRangeInput" id="priceMinInput" value="0€">
        <label>Maximum</label>
        <input type="text" class="priceRangeInput" id="priceMaxInput" value="0€">
        <input type="button" class="priceRangeInput" id="priceSearchButton" value="Lancer la recherche">
    </div>
      
    <div id="gallery">
        <%
        var i;
        for(i = 0; i < articles.length; i++){ %>
            <div class="article">
                <img id="bouquet<%=i%>" src="../<%=articles[i].location%>"alt="bouquet<%=i%>">
                <p class="item_price"><%=(articles[i].prix).toFixed(2)%>€</p>
                <button id="buyBtn<%=i%>" class="buyBtn" id >Ajouter au panier</button>
            </div>
        <% } %>
    </div>
    
    <footer>

    </footer>
</body>