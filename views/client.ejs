<!DOCTYPE html>

<head>
    <script src="../jquery/jquery.js"></script>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/gallery.css">
    <title>Boutique en ligne de vente de fleurs IP7Floral</title>
    <script> 
        var articles, username;
        <% if(typeof articles !== 'undefined') {%> 
            articles = <%- JSON.stringify(articles) %>;
        <% } else { %>
            articles = [];
        <% } %>

        <% if(typeof username !== 'undefined') {%> 
            username = <%- JSON.stringify(username) %>;
        <% } else { %>
            username = "";
        <% } %>
    </script>
    <script src="../script/home.js"></script>
</head>

<body>
    <header>
        <% if(typeof username !== 'undefined') {%> 
            <button onclick="location.href='/logout'" class="button" type="button" id="headerBtn">Se déconnecter</button>
        <% } else { %> 
            <button onclick="location.href='/login'" class="button" type="button" id="headerBtn">Se connecter</button>
        <% } %>
    </header>

    <div id="nav">
        <button class="tablinks">Catalogue</button>
        <button class="tablinks">Mon panier</button>
        <button class="tablinks">Mes commandes</button>
    </div>

    <div id="priceRange">
        <h3>Prix</h3>
        <input id="priceSlider" type="range" name="priceSlider" min="0" value="0" max="0">
    </div>
      

    <div id="gallery">
        <%
        var i;
        for(i = 0; i < articles.length; i++){ %>
            <div class="article">
                <img id="bouquet<%=i%>" src="../<%=articles[i].location%>"alt="bouquet<%=i%>">
                <p class="item_price"><%=(articles[i].prix).toFixed(2)%>€</p>
                <button id="buyBtn<%=i%>" class="buyBtn" id >Ajouter au panier</button>
            </div>
        <% } %>
    </div>
    
    <footer>

    </footer>
</body>